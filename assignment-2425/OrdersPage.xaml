<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="assignment_2425.OrdersPage"
	Title="Orders">

    <VerticalStackLayout Padding="10">

        <SearchBar Placeholder="Search Past Orders"/>

        <Label Text="Most Recent Order" FontSize="24" FontAttributes="Bold"/>
        <Frame Padding="10" BackgroundColor="LightGray">
            <Label Text="{Binding RecentOrder}" FontSize="18"/>
        </Frame>
        <Label Text="Recent Orders by Place" FontSize="18"/>
        <CollectionView ItemsSource="{Binding PastOrders}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="White">
                        <Label Text="{Binding Name}" FontSize="18"/>
                        <Label Text="{Binding Date}" FontSize="14" TextColor="Gray"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>